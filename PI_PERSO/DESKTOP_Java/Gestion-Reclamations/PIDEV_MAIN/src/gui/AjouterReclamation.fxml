         <children>
            <Label fx:id="labelTypeReclamation" layoutX="80.0" layoutY="27.0" prefHeight="30.0" prefWidth="1039.0" text="Label" textFill="#ee586e">
               <font>
                  <Font name="Verdana Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="labelTitreRec" layoutX="24.0" layoutY="85.0" prefHeight="30.0" prefWidth="265.0" text="En quoi pouvons-nous vous aider?" textFill="#a05385">
