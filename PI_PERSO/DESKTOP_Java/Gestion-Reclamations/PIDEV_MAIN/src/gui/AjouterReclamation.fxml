            <ImageView fx:id="GoBackBtn" fitHeight="45.0" fitWidth="45.0" layoutX="24.0" layoutY="22.0" onMouseClicked="#GoBk" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: HAND;">
               <image>
                  <Image url="@GoBack.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
