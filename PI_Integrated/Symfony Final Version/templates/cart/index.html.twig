{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block hero %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message | raw }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    {% for message in app.flashes('fail') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    <section class="h-100 gradient-custom">
        <div class="container py-5">
            <div class="row d-flex justify-content-center my-4">
                <div class="col-md-8">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h5 class="mb-0">Cart - {{ items | length }} items</h5>
                        </div>
                        {% for item in items %}

                            <div class="card-body">
                                <!-- Single item -->
                                <div class="row">
                                    <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                        <!-- Image -->
                                        <div class="bg-image hover-overlay hover-zoom ripple rounded"
                                             data-mdb-ripple-color="light">
                                             <img  src="../images/{{item.product.image}}"  class="w-100" alt="Blue Jeans Jacket" >
                                            
                                            <a href="#!">
                                                <div class="mask"
                                                     style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                            </a>
                                        </div>
                                        <!-- Image -->
                                    </div>


                                    <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                        <!-- Data -->
                                        
                                        <a href="{{ path('cart_add',{'id':item.product.codeproduit}) }}">
                                          <span style="font-weight: bold; color: blue">{{ item.product.codeproduit }}</span>
                                                       </a>
                                                       <div></div>
                                        <a href="{{ path('cart_remove', {'id':item.product.id}) }}" type="button"
                                           class="btn btn-danger btn-sm mb-2" data-mdb-toggle="tooltip"
                                           title="Remove item">
                                            {#                                    <i class="fas fa-trash"></i> #}
                                            X
                                        </a>

                                        <!-- Data -->
                                    </div>

                                    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                        <!-- Quantity -->
                                        <div class="d-flex mb-4" style="max-width: 300px">
                                            <a
                                                    class=" btn btn-primary px-3 me-2"
                                                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                                <i class="fas fa-minus"></i>
                                            </a>

                                            <div class="form-outline">
                                                <input id="form1" min="0" name="quantity" value="{{ item.quantity }}"
                                                       type="number"
                                                       class="form-control" disabled/>
                                                <label class="form-label" for="form1">Quantity</label>
                                            </div>

                                            <a href="{{ path('cart_add',{id:item.product.id}) }}"
                                               class="btn btn-primary px-3 ms-2"
                                               onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                                            >
                                                <i class="fas fa-plus"></i>
                                            </a>
                                        </div>
                                        <!-- Quantity -->

                                        <!-- Price -->
                                        <p class="text-start text-md-center">
                                            <strong>${{ item.product.prixunitaire }}</strong>
                                        </p>
                                        <!-- Price -->
                                    </div>
                                </div>
                            </div>
                            <hr class="my-4"/>

                            <!-- Single item -->
                        {% endfor %}


                        <!-- Single item -->

                        <!-- Single item -->
                    </div>
                </div>

              
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Summary</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li
                                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Products
                                <span>${{ total }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                remise
                                <span>{{ remise }}%</span>
                            </li>
                            <li
                                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Total amount</strong>
                                    <strong>
                                        <p class="mb-0">(including VAT 12%)</p>
                                    </strong>
                                </div>
                                <span><strong>${{ total*1.12 - total*remise/100 }}</strong></span>
                            </li>
                        </ul>

                        <a href="{{ path('orderCommande') }}" type="button"
                           class="btn btn-primary btn-lg btn-block">
                            Passer Commande
                        </a>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
{% endblock %}
{% block About %}{% endblock %}
{% block WhyUs %}{% endblock %}
{% block stats %}{% endblock %}
{% block menu %}{% endblock %}
{% block testimonial %}{% endblock %}
{% block events %}{% endblock %}
{% block booking %}{% endblock %}
{% block gallery %}{% endblock %}
{% block contact %}{% endblock %}
{% block chefs %}{% endblock %}