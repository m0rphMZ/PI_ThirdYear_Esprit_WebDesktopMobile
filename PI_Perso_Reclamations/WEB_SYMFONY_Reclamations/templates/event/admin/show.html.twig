{% block title %}{{ event.title }}{% endblock %}

{% block cards %}
    <h1>{{ event.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <td><img src="{{ asset('uploads/images/' ~ event.affiche) }}" class="img-fluid" width="300" height="300"></td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ event.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
