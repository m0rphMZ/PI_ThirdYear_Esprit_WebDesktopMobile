            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ event.enddate ? event.enddate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Ticketcount</th>
                <td>{{ event.ticketcount }}</td>
            </tr>
            <tr>
                <th>Ticketprice</th>
                <td>{{ event.ticketprice }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ event.location.getLieuLoc() }}</td>
            </tr>
            <tr>
                <th>Host</th>
                <td>{{ event.host.getNom() ~" "~ event.host.getPrenom() }}</td>
            </tr>
